
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Fresh Fruit | Login</title>

    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/font-awesome/css/font-awesome.css")
    @Styles.Render("~/Content/animate.css")
    @Styles.Render("~/Content/style.css")

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">FF+</h1>

            </div>
            <h3>Welcome to FF+</h3>
            <p>
                To make every day of your life well, and live a good life, and you will be happy and full of life.
                <!--Continually expanded and constantly improved Inspinia Admin Them (IN+)-->
            </p>
            <p>The new day, from the beginning of the login.</p>
            <form class="m-t" role="form" action="index.html">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Username" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

                <a href="login.html#"><small>Forgot password?</small></a>
                <p class="text-muted text-center"><small>Do not have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="register.html">Create an account</a>
            </form>
            <p class="m-t"> <small>FF+ we app framework base on Bootstrap 3.3.5 &copy; 2015</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    
    @Scripts.Render("~/Scripts/jquery-2.1.1.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")

</body>

</html>
